.container {
  width: 366rpx;
  height: 1418rpx;
  display: block;
  box-sizing: border-box;
  position: relative;
  left: 168rpx;
  top: 454rpx;
}

.homepage {
  top: 0;
  position: absolute;
  justify-content: center;
  align-self: center;
  align-items: center;
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}

.footer {
  display: flex;
  position: fixed;
  bottom: 0;
}

.box {
  transform: translateZ(-50%);
  display: flex;
  align-items: center;
  width: 25vw;
  height: 8vh;
  flex: 60% 40%;
  height: 100rpx;
  background-color: wheat;
  border-radius: 6rpx;
  box-shadow: 0 0 10rpx #ccc;
}

#theMap {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 100vh;
}

.inputbar {
  transform: translateZ(-50%);
  display: flex;
  text-align: center;
  position: relative;
  align-items: center;
  border: 0px solid rgb(255, 85, 0);
  border-radius: 75px;
  background: linear-gradient(
    270deg,
    rgba(255, 99, 47, 0.904) 21%,
    rgba(245, 214, 214, 0.881) 100%
  );
  background-blend-mode: normal;
  padding: 10rpx;
  border: 8rpx solid rgba(235, 64, 64, 0.854);
  border-radius: 50rpx;
  width: 97vw;
  height: 80rpx;
  position: relative;
  left: -169rpx;
  top: -452rpx;
}

.inputbar input {
  padding-left: 30rpx;
  padding-right: 30rpx;
  top: 50%;
}

.search_button {
  width: 144rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  left: 0rpx;
  top: 0rpx;
}

.input_text {
  width: 90%;
  height: 90%;
  top: 50%;
  border-radius: 10rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.homeicon {
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
}

.button_text {
  font-size: 25rpx;
}

.avatar {
  background-color: gray;
  border-radius: 50%;
  width: 80px;
  height: 50px;
}

.icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 50rpx;
}
